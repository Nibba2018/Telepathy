<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#C4C4C4"
    tools:context=".guess_comp_game">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="113dp"
        app:srcCompat="@drawable/title_guess_comp" />

    <ImageView
        android:id="@+id/result_tile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="95dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/go_higher_tile" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="101dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/entry" />

        <ImageButton
            android:id="@+id/submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="112dp"
            app:srcCompat="@drawable/submit_button" />

        <EditText
            android:id="@+id/user_entry"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="25dp"
            android:ems="10"
            android:inputType="number"
            android:text="5000"
            android:textAlignment="textStart"
            android:textSize="36sp" />

    </RelativeLayout>

</LinearLayout>